<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.jborges.a21game.fragments.SobreFragment"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/etDesenvolvido"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Desenvolvido por Jefferson Borges"
        android:textAlignment="center"
        android:textSize="16sp"
        tools:paddingTop="10dp" />

    <ImageView
        android:id="@+id/ivSobre"
        android:layout_width="369dp"
        android:layout_height="412dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/sobre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDesenvolvido" />

</android.support.constraint.ConstraintLayout>
